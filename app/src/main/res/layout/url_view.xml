<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:background="@color/colorPrimary"
        android:text="ADRES DEGISTIR"
        android:textColor="#fff"
        android:gravity="center"
        android:textSize="16sp"
        android:fontFamily="@font/wendy_one"
        android:id="@+id/txview"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <EditText
        android:padding="8dp"
        android:id="@+id/edIpAdress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:background="@drawable/background_text"
        android:ems="10"
        android:hint="IP adresi girin.. Orn: 192.168.1.102"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txview" />

    <Button
        app:layout_constraintWidth_percent="0.45"
        android:id="@+id/txIpIptal"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_margin="16dp"

        android:layout_marginBottom="8dp"
        android:text="Ä°PTAL"
        android:background="@drawable/background_button"
        android:textColor="#fff"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edIpAdress" />

    <Button
        android:layout_marginStart="8dp"
        app:layout_constraintWidth_percent="0.45"
        android:id="@+id/txIpTamam"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_margin="16dp"
        android:background="@drawable/background_button"
        android:textColor="#fff"
        android:text="KAYDET"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edIpAdress" />
</androidx.constraintlayout.widget.ConstraintLayout>