<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AktarActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcTranserSiparis"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:background="#D7DCF4"
        android:nestedScrollingEnabled="true"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"

        app:layout_constraintWidth_percent="0.47" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcTransferAktarilacaklar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="#D7DCF4"
        android:nestedScrollingEnabled="true"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintWidth_percent="0.47" />

    <Button
        android:onClick="click_iptal"
        android:layout_marginBottom="8dp"
        android:textColor="#fff"
        android:background="@drawable/background_button"
        app:layout_constraintWidth_percent="0.47"
        android:id="@+id/button"
        android:layout_marginStart="16dp"
        android:layout_width="0dp"
        android:layout_height="35dp"

        android:text="İPTAL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:onClick="click_kaydet"
        android:textColor="#fff"
        android:layout_marginBottom="8dp"

        android:background="@drawable/background_button"
        android:layout_marginEnd="16dp"
        app:layout_constraintWidth_percent="0.47"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:text="KAYDET"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:padding="5dp"
        android:textSize="16sp"
        android:background="@drawable/background_text"
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/concert_one"
        android:gravity="center"
        android:text="Siparisler"
        app:layout_constraintEnd_toEndOf="@+id/rcTranserSiparis"
        app:layout_constraintStart_toStartOf="@+id/rcTranserSiparis"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:padding="5dp"
        android:textSize="16sp"
        android:background="@drawable/background_text"
        android:fontFamily="@font/concert_one"
        android:gravity="center"
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Aktarılacaklar"
        app:layout_constraintEnd_toEndOf="@+id/rcTransferAktarilacaklar"
        app:layout_constraintStart_toStartOf="@+id/rcTransferAktarilacaklar"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>